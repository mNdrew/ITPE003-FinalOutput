<html>
<head>
    <title>LogIn</title>
    <meta charset="utf-8">
    <!-- IMPORT STYLE.CSS -->
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link rel="stylesheet" type="text/css" href="/public/css/style.css">



    <!-- IMPORT BOOTSTRAP -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    
    <!-- GOOGLE FONTS Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter&family=Poppins&display=swap" rel="stylesheet">
</head>
<style>
    body{
        font-family: 'Inter', sans-serif;
        font-family: 'Arial', 'Helvetica', sans-serif;
        font-family: 'Poppins', sans-serif;   
      
        background-repeat: no-repeat;
        background-image: url("/img/bgs/unicorn-bg.jpg") ;
        background-size: cover;
        background-blend-mode: multiply;
        backdrop-filter: blur(1px);
        background-color: rgb(78, 18, 18);
        color: white;
    }
  </style>
<body>
    <nav class="nav nav-tabs flex-column justify-content-center text-center bg-dark text-light py-3">
        <a href="/" class="navbar-brand" id="navbarBrand">HobbyLobby</a>
        <ul class="nav justify-content-center text-light">
            <li class="nav-item">
                <a class="px-3 text-light" href="/page-home">Home</a>
            </li>
            <li class="nav-item">
                <a class="px-3 text-light" href="/page-shop">Shop</a>
            </li>
            <li class="nav-item">
                <a class="px-3 text-light" href="/page-userCart">My Cart</a>
            </li>
            <li class="nav-item">
                <a class="px-3 text-light" href="/page-userProfile">My Account</a>
            </li>
            <li class="nav-item">
                <a class="px-3 text-light" href="/page-about">About</a>
            </li>
        </ul>
    </nav>

    <main>
        <section id="herrobanner">
            <div class="herobanner">
                <h2 class="display-4">Welcome to the Hobby Lobby</h2>
                <p class="lead">Discover a wide range of Gundam model kits, action figures, and accessories.</p>
                <hr class="my-4">
                <p>Explore our collection and find your favorite Gundam items today.</p>
            </div>
        </section>
        <section id="itemsForSale" class="px-5 py-4 centerItems" >
            
                <h2 class="mb-3 centerItems mb-3 fp">Featured Products</h2>
                <div class="row centerItems">
                    <% shopItems.forEach((item) => { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card">
                            <a href="/page-shop"><img src="<%= item.imageLink %>" id="fp-thumb" alt="<%= item.title %>" class="card-img-top"></a>
                            <div class="card-body">
                                <h5 class="card-title"><%= item.title %></h5>
                                <p class="card-text" hidden disabled>Product description and details.</p>
                                <a type="button" class="btn btn-danger" href="/page-shop" hidden>Check on Shop</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                    
                    <!-- Add more products as needed -->
                </div>
            
        </section>

        <section>

        </section>




    </main>

    <footer>
        <div class="container-fluid bg-dark text-light text-center py-3">
            <p>Hobby Lobby - Cayetano, Guinto, Rosete, Velasco, Velasquez</p>
        </div>
    </footer> 
</body>
</html>